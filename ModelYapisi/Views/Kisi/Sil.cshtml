@model ModelYapisi.Models.Kisi
@{
    ViewBag.Title = "Sil";
}

<h2>Kişi Sil</h2>
<hr />
@* burada girilen dataları alabilmek için using ile begin form kullanılmalıdır *@
<p> Aşağıdaki kişiyi silmek istediğinize emin misiniz?</p>

    <div class="input-group">
        <span class="input-group-addon" id="txtad">Ad :</span>
        @Html.DisplayFor(x => x.Ad, new { @class = "form-control", aria_describedby = "txtad" })
        @*<input type="text" class="form-control" placeholder="Username" aria-describedby="txtad">*@
    </div>
    <br />

    <div class="input-group">
        <span class="input-group-addon" id="txtSoyad">SoyAd :</span>
        @Html.DisplayFor(x => x.Soyad, new { @class = "form-control", aria_describedby = "txtSoyad" })

    </div>
    <br />

    <div class="input-group">
        <span class="input-group-addon" id="txtYas">Yas :</span>
        @Html.DisplayFor(x => x.Yas, new { @class = "form-control", aria_describedby = "txtYas" })

    </div>
    <br />
@using (@Html.BeginForm())
{
    @Html.HiddenFor(x=>x.Id)
    <div class="input-group">
        <input type="submit" value="Sil" class="btn btn-success" />
    </div>
}
    <div class="input-group">
        @if (ViewBag.Result != null)
        {

            <div class="alert alert-@ViewBag.Status" role="alert">@ViewBag.Result</div>

        }
    </div>

