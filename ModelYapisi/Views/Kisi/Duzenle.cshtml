@model ModelYapisi.Models.Kisi
@{
    ViewBag.Title = "Duzenle";
}

<h2>Kişi Düzenle</h2>
<hr />
@* burada girilen dataları alabilmek için using ile begin form kullanılmalıdır *@
@using (@Html.BeginForm())
{
    <div class="input-group">
        <span class="input-group-addon" id="txtad">Ad :</span>
        @Html.TextBoxFor(x => x.Ad, new { @class = "form-control", placeholder = "Kişi Adı", aria_describedby = "txtad" })
        @*<input type="text" class="form-control" placeholder="Username" aria-describedby="txtad">*@
    </div>
    <br />

    <div class="input-group">
        <span class="input-group-addon" id="txtSoyad">SoyAd :</span>
        @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control", placeholder = "Kişi Adı", aria_describedby = "txtSoyad" })

    </div>
    <br />

    <div class="input-group">
        <span class="input-group-addon" id="txtYas">Yas :</span>
        @Html.TextBoxFor(x => x.Yas, new { @class = "form-control", placeholder = "Kişi Adı", aria_describedby = "txtYas" })

    </div>
    <br />

    <div class="input-group">
        <input type="submit" value="Kaydet" class="btn btn-success" />
    </div>


    <div class="input-group">
        @if (ViewBag.Result != null)
        {

            <div class="alert alert-@ViewBag.Status" role="alert">@ViewBag.Result</div>

        }
    </div>
}
