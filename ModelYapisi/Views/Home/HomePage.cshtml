@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Home Page</h2>
            <hr/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div>
                @Html.ActionLink("Yeni Kişi","Yeni","Kisi",null,new {@class="btn btn-primary"})
                <br /><br/>
            </div>
            <ul class="list-group">
                <li class="list-group-item active">Kişiler</li>
                @foreach (var kisi in Model.Kisiler)
                {
                    <li class="list-group-item">
                        @Html.ActionLink("Düzenle", "Duzenle", "Kisi",new {id=kisi.Id},new {@class="btn btn-success btn-xs"})
                        @Html.ActionLink("Sil","Sil","Kisi",new {id=kisi.Id},new {@class ="btn btn-danger btn-xs"})
                        @(kisi.Ad + " " + kisi.Soyad)
                    </li>
                }
            </ul>
        </div>
  
        <div class="col-md-6">
            <div>
                @Html.ActionLink("Yeni Adres", "Yeni", "Adres", null, new { @class = "btn btn-primary" })
                <br /><br />
            </div>
                <ul class="list-group">
                    <li class="list-group-item active">Adresler</li>
                    @foreach (var adres in Model.Adresler)
                    {
                        <li class="list-group-item">
                            @Html.ActionLink("Düzenle", "Duzenle", "Adres", new { id = adres.Id }, new { @class = "btn btn-success btn-xs" })
                            @Html.ActionLink("Sil", "Sil", "Adres", new { id = adres.Id }, new { @class = "btn btn-danger btn-xs" })
                            @adres.AddressDetail (<i> @(adres.KisiId.Ad + " " + adres.KisiId.Soyad)</i>)
                        </li>
                    }
                </ul>
            </div>
    </div>
</div>